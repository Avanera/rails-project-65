.btn-group role="group" aria-label="Basic radio toggle button group"
  - under_moderation = params.dig(:q, :aasm_state_eq) == 'under_moderation'

  = link_to t('.under_moderation'),
    admin_path(q: { aasm_state_eq: :under_moderation }),
    class: "btn btn-outline-primary #{'active' if under_moderation}",
    role: 'button'
  = link_to t('.all_bulletins'),
    admin_path,
    class: "btn btn-outline-primary #{'active' unless under_moderation}",
    role: 'button'
  = link_to t('.categories'),
    admin_categories_path,
    class: 'btn btn-outline-primary',
    role: 'button'

= render 'search_form', bulletins: @bulletins

= render 'list', bulletins: @bulletins
